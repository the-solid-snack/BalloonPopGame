<Window x:Class="BaloonPopGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaloonPopGame"
        mc:Ignorable="d"
        Title="Baloon pop game!" Height="600" Width="450" KeyDown="canvasKeyIsDown" ResizeMode="CanMinimize">
    <Canvas Name="MyCanvas" Focusable="True" MouseLeftButtonDown="popBalloons">
        <Canvas.Background>
            <ImageBrush ImageSource="files/background-Image.jpg"/>
        </Canvas.Background>
        <Label Name="scoreLabel" FontSize="24" Content="Score: 0" Foreground="black" FontWeight="ExtraBold" Canvas.Top="527" />
    </Canvas>
</Window>
